<% if !user_signed_in? # if the user is not signed in, rendor this %>

  <style>
    body {
      background: linear-gradient(
          rgba(0,0,0, 0.5),
          rgba(0,0,0, 0.5)),
          url("/bg.jpg") no-repeat center center fixed
      ; /* only display once, center horizontal and vertical, don't let scroll change position. */
      -webkit-background-size: cover; /* Cover the whole HTML element */
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    
    h1 {
      color: white;
      font-weight: bold;
    }
    
    .container-index {
      margin-right: 15%;
      margin-left: 15%;
    }
    
    .text {
      color: white;
      font-weight: 300;
      font-size: 150%;
    }
    
    .btmborderline {
      border-bottom: solid 1px #dcdcdc;
    }
    
    .bold {
      font-weight: bold;
      font-size: 150%;
    }
    
    .greyed {
      font-weight: 600;
      font-size: 150%;
      color: #66757f;
    }
    
    .footer-links {
      text-align: center;
      color: white;
      margin-top: 30%;
      font-size: 75%;
    }
    
    .log-in {
      float: right;
      width: 300px;
      height: 120px;
      margin-top: 7.5%;
    }
    
    .sign-up {
      float: right;
      width: 300px;
      height: 203px;
    }
    
    .marginup {
      margin-top: -16px;
    }
    
    .form-control {
      margin-top: 5px;
      margin-bottom: 5px;
    }
    
    .zero-padding {
      padding-left: 0px;
      padding-right: 0px;
    }
    
    .height44 {
      height: 44px;
    }
    
    .btm-margin-down {
      margin-bottom: -21px;
    }
        
  </style>
  
  <div class="container-index">
    <div class="col-sm-6">
      <h1>Welcome to Tweeter.</h1>
      <p class="text">
        Connect with your friends -- and other fascinating
        people.  Get in-the-moment updates on the things
        that interest you.  And watch events unfold, in real
        time, from every angle.
      </p>
    </div>
    <div class="col-sm-6">
      <div class="log-in panel">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
          </div>
        
          <div class="field">
            <div class="col-sm-9 zero-padding">
              <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
            </div>
            <div class="actions col-sm-3 zero-padding height44">
              <div align="right">
                <%= f.submit "Log in", class: "btn btn-primary btm-margin-down" %>
              </div>
            </div>
          </div>
            
            
        
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        
        <% end %>

      </div>
      <div class="sign-up panel">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="btmborderline">
            <span class="bold">New to Tweeter? </span>
            <span class="greyed">Sign up</span>
          </div>
          
          <div class="field">
            <%= f.text_field :username, placeholder: "Username", autofocus: true, class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>
        
          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
          </div>
          <br />
          
          <div class="actions">
            <div align="right">
              <%= f.submit "Sign up for Tweeter", class: "btn btn-primary marginup" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-12">
      <p class="footer-links">About Help Blog Status Jobs Terms Privacy Cookies Ads Info Brand Advertise Businesses Media Developers Directory Â© 2016 Tweeter</p>
    </div>
  </div>


<% else # if the user IS signed in, render the following %>

  <script>document.location = "/home"</script>

<% end %>